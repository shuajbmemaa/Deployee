@model Deployee.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Login</h3>
                    <form method="post">
                        <fieldset class="p-4">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="form-label input-error-text"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="form-label input-error-text"></span>
                            </div>
                            @if (ViewData.ModelState.IsValid is false && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var error in ViewData.ModelState[string.Empty]!.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }
                            <div class="d-flex justify-content-end mt-3">
                            </div>
                            <div class="d-flex justify-between-around align-items-center mt-3">
                                <a href="/Users/Register" class="text-sm">
                                    <span class="text-dark">Don't have an account?</span>
                                    <span class="text-primary">Register Now</span>
                                </a>
                                <button type="submit" class="btn btn-blue font-weight-bold ml-3">Login</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
