@model Deployee.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border mb-4">
                    <h3 class="bg-gray p-4">Register Now</h3>
                    <form asp-action="Register" method="post">
                        <fieldset class="p-4">
                            <div class="">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="form-label input-error-text"></span>
                            </div>
                            <div class="">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="form-label input-error-text"></span>
                            </div>
                            <div class="">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="form-label input-error-text"></span>
                            </div>
                            <div class="">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                                <span asp-validation-for="Password" class="form-label input-error-text"></span>
                            </div>
                            <div class="">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword" class="form-label input-error-text"></span>
                            </div>
                            @if (ViewData.ModelState.IsValid is false && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var error in ViewData.ModelState[string.Empty]!.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <a href="/Users/Login" class="text-sm">
                                    <span class="text-dark">Already a member?</span>
                                    <span class="text-primary">Log In</span>
                                </a>
                                <button type="submit" class="btn btn-blue font-weight-bold">Register Now</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}